<h1>Listing cds</h1>

<div class="container">
  <table class="table">
    <thead>
    <tr>
      <th>Artiste</th>
      <th>Nom</th>
      <th>Editeur</th>
      <th>Pochette</th>
      <th>Ann√©e</th>
      <th>Genre</th>
      <th>Date d'achat</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @cds.each do |cd| %>
        <tr>
          <td><%= cd.artist %></td>
          <td><%= cd.name %></td>
          <td><%= cd.editor %></td>
          <td><%= cd.cover %></td>
          <td><%= cd.year %></td>
          <td><%= cd.gender %></td>
          <td><%= cd.purchaseDate %></td>
          <td><%= cd.item_collection %></td>
          <td><%= link_to 'Afficher', cd %></td>
          <td><%= link_to 'Modifier', edit_cd_path(cd) %></td>
          <td><%= link_to 'Supprimer', cd, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>

