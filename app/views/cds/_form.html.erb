<%= form_for(@cd, html: {multipart: true}) do |f| %>
    <% if @cd.errors.any? %>
        <div class="alert alert-danger alert-block">
          <button type="button" class="close" data-dismiss="alert">x</button>
          <h4><%= pluralize(@cd.errors.count, "erreur") %> ont empechés la sauvegarde de ce CD:</h4>
          <ul>
            <% @cd.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label "Nom de l'album: " %><br>
      <%= f.text_field :name, :class => 'input form-control', :autofocus => true %>
    </div>
    <div class="field">
      <%= f.label "Artiste: " %><br>
      <%= f.text_field :artist, :class => 'input form-control' %>
    </div>
    <div class="field">
      <%= f.label "Editeur: " %><br>
      <%= f.text_field :editor, :class => 'input form-control' %>
    </div>
    <div class="field">
      <%= f.label "Année: " %><br>
      <%= f.number_field :year, :class => 'input form-control', :value => Date.today.year %>
    </div>
    <div class="field">
      <%= f.label "Genre: " %><br>
      <%= f.text_field :gender, :class => 'input form-control' %>
    </div>
    <div class="field">
      <%= f.label "Description: " %><br>
      <%= f.text_area :description, :class => 'input form-control' %>
    </div>
    <div class="field">
      <%= f.label "Date d'achat" %><br>
      <%= f.date_select :purchaseDate, :start_year => Date.today.year - 100, :end_year => Time.now.year, :class => 'input form-control' %>
    </div>
    <div class="field">
      <%= f.file_field :image %>
    </div><br>

    <%= f.hidden_field :item_collection_id, :value => @item_collection_id %>

    <div class="actions">
      <%= f.submit "Enregistrer", :class => "btn btn-success" %>
    </div>
<% end %>
