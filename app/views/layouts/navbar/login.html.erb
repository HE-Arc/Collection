<%= form_for(:user, :url => session_path(:user), :html => {:class => 'navbar-form navbar-right'}) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true ,:class=>'form-control',:placeholder => "Email"%>
  </div>
  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off",:class=>'form-control',:placeholder => "mot de passe" %>
  </div>
  <div class="actions form-group">
    <%= f.submit "se connecter", :class=>'btn btn-success' %>
  </div>
<% end %>