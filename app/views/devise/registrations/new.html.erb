<h2>my Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :nom %><br />
    <%= f.text_field :name, autofocus: true,:class=>'input form-control',:placeholder => "nom" %>
  </div>

  <div class="field">
    <%= f.label :prenom %><br />
    <%= f.text_field :firstname, autofocus: true ,:class=>'input form-control',:placeholder => "prenom"%>
  </div>

  <div class="field">
    <%= f.label :pseudo %><br />
    <%= f.text_field :pseudo, autofocus: true ,:class=>'input form-control',:placeholder => "pseudo"%>
  </div>

  <div class="field">
    <%= f.label :anonym %><br>
    <%= f.check_box :anonym %>
  </div>

  <div class="field">
    <%= f.label :birthdate %><br>
    <%= f.date_select :birthdate %>
  </div>



  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,:class=>'input form-control',:placeholder => "Email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,:class=>'input form-control',:placeholder => "mot de passe" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:class=>'input form-control',:placeholder => "confirmation mot de passe" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
