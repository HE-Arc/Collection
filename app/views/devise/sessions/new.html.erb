<h2>Se connecter</h2>

<%= form_for(:user, :url => session_path(:user)) do |f| %>

    <div class="input field form-group">
      <%= f.label "Adresse email" %><br/>
      <%= f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => "Email" %>
    </div>

    <div class="input field form-group">
      <%= f.label "Mot de passe" %><br/>
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder => "mot de passe" %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "mot de passe oubliÃ©?", new_password_path(resource_name) %><br/>
      <% end -%>
    </div>


    <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label "se souvenir de moi" %>
        </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Se connecter", :class => "btn btn-primary" %>
      <%= link_to "S'enregistrer", new_registration_path(resource_name), :class => "btn btn-default" %>
    </div>
<% end %>
